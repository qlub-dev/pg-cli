{
    "compilerOptions": {
      "target": "es5",
      "module": "nodenext",
      "lib": ["es6", "es2015", "dom"],
      "declaration": true,
      "outDir": "lib",
      "rootDir": "src",
      "strict": false,
      "types": ["node"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "nodenext"
    },
    "ts-node": {
        "esm": true, // «———— enabling ESM for ts-node   
      }, 
  }